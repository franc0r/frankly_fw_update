{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "cargo build --lib && cargo build",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": "$rustc"
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "cargo test --lib",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$rustc"
        }
    ]
}